                            <a class="nav-link fw-semibold" asp-area="" asp-controller="Home" asp-action="QuienesSomos" style="color:#5a3d2a; transition: color 0.3s, border-bottom 0.3s; padding-bottom: 0.5rem; border-bottom: 2px solid transparent;" onmouseover="this.style.color='#8b5e3c'; this.style.borderBottomColor='#d4a574'" onmouseout="this.style.color='#5a3d2a'; this.style.borderBottomColor='transparent'">
                                <i class="fas fa-users me-1"></i> Quiénes Somos
                            </a>
