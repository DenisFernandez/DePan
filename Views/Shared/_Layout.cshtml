    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Cargar cantidad de items en el carrito al iniciar la página
        document.addEventListener('DOMContentLoaded', function() {
            @if (Context.Request.Cookies["jwt"] != null)
            {
                @:cargarContadorCarrito();
                @:verificarExpiracionCarrito();
                @:
                @:// Verificar expiración cada 10 segundos
                @:setInterval(verificarExpiracionCarrito, 10000);
            }
        });

        async function cargarContadorCarrito() {
            try {
                const response = await fetch('@Url.Action("GetCantidadItems", "Carrito")');
                const result = await response.json();
                
                const contador = document.querySelector('.contador-carrito');
                if (contador) {
                    contador.textContent = result.totalItems;
                }
            } catch (error) {
                console.error('Error cargando contador del carrito:', error);
            }
        }

        async function verificarExpiracionCarrito() {
            try {
                // Primero verificar si hay una notificación de expiración activa en localStorage
                var notificacionData = localStorage.getItem('carrito_expirado');
                if (notificacionData) {
                    var data = JSON.parse(notificacionData);
                    var ahora = new Date().getTime();
                    var tiempoTranscurrido = ahora - data.timestamp;
                    var DURACION_NOTIFICACION = 3 * 60 * 1000; // 3 minutos
                    
                    // Si hay notificación activa, mostrar el badge
                    if (tiempoTranscurrido < DURACION_NOTIFICACION) {
                        const badgeNotificacion = document.querySelector('.badge-notificacion');
                        if (badgeNotificacion) {
                            badgeNotificacion.style.display = 'inline-block';
                            badgeNotificacion.classList.add('pulso-notificacion');
                        }
                        return; // No consultar el endpoint si ya hay notificación activa
                    } else {
                        // Limpiar si ya pasó el tiempo
                        localStorage.removeItem('carrito_expirado');
                    }
                }
                
                // Luego verificar si hay productos próximos a expirar
                const response = await fetch('@Url.Action("CheckExpiracion", "Carrito")');
                if (!response.ok) return;
                
                const result = await response.json();
                
                const badgeNotificacion = document.querySelector('.badge-notificacion');
                if (badgeNotificacion) {
                    if (result.tieneAlerta) {
                        badgeNotificacion.style.display = 'inline-block';
                        badgeNotificacion.classList.add('pulso-notificacion');
                    } else {
                        badgeNotificacion.style.display = 'none';
                        badgeNotificacion.classList.remove('pulso-notificacion');
                    }
                }
            } catch (error) {
                console.error('Error verificando expiración del carrito:', error);
            }
        }

        // Función global para actualizar contador (usada desde otras páginas)
        function actualizarContadorCarrito(totalItems) {
            const contador = document.querySelector('.contador-carrito');
            if (contador) {
                contador.textContent = totalItems;
            }
            // También verificar la expiración al actualizar el carrito
            verificarExpiracionCarrito();
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
