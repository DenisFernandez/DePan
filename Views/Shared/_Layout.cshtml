<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DePan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-bread-slice" style="font-size:2rem; color:#7a4e31; margin-right:8px;"></i>
                    <div>
                        <div style="line-height:1; font-size:1.05rem;">DePan</div>
                        <small style="font-size:0.65rem; color:#7a4e31;">Panadería artesanal</small>
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Productos" asp-action="Index">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Request.Cookies["jwt"] != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark position-relative" asp-controller="Carrito" asp-action="Index">
                                    <i class="fas fa-shopping-cart"></i> Carrito
                                    <span class="contador-carrito badge bg-primary rounded-pill">0</span>
                                    <span class="badge-notificacion position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle" style="display:none;">
                                        <i class="fas fa-exclamation" style="font-size: 8px;"></i>
                                        <span class="visually-hidden">Alerta de expiración</span>
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Pedidos" asp-action="MisPedidos">Mis Pedidos</a>
                            </li>
                            
                            @if (User.IsInRole("Administrador") || User.IsInRole("administrador"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-dark dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Administración
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Productos" asp-action="Admin">Productos</a></li>
                                        <li><a class="dropdown-item" asp-controller="Pedidos" asp-action="Admin">Pedidos</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Reportes" asp-action="Index">
                                            <i class="fas fa-chart-line"></i> Reportes
                                        </a></li>
                                    </ul>
                                </li>
                            }
                            
                            <li class="nav-item">
                                <form asp-controller="Auth" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Cerrar Sesión</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">Iniciar Sesión</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm" asp-controller="Auth" asp-action="Register">Registrarse</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - DePan - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Cargar cantidad de items en el carrito al iniciar la página
        document.addEventListener('DOMContentLoaded', function() {
            @if (Context.Request.Cookies["jwt"] != null)
            {
                @:cargarContadorCarrito();
                @:verificarExpiracionCarrito();
                @:
                @:// Verificar expiración cada 10 segundos
                @:setInterval(verificarExpiracionCarrito, 10000);
            }
        });

        async function cargarContadorCarrito() {
            try {
                const response = await fetch('@Url.Action("GetCantidadItems", "Carrito")');
                const result = await response.json();
                
                const contador = document.querySelector('.contador-carrito');
                if (contador) {
                    contador.textContent = result.totalItems;
                }
            } catch (error) {
                console.error('Error cargando contador del carrito:', error);
            }
        }

        async function verificarExpiracionCarrito() {
            try {
                // Primero verificar si hay una notificación de expiración activa en localStorage
                var notificacionData = localStorage.getItem('carrito_expirado');
                if (notificacionData) {
                    var data = JSON.parse(notificacionData);
                    var ahora = new Date().getTime();
                    var tiempoTranscurrido = ahora - data.timestamp;
                    var DURACION_NOTIFICACION = 3 * 60 * 1000; // 3 minutos
                    
                    // Si hay notificación activa, mostrar el badge
                    if (tiempoTranscurrido < DURACION_NOTIFICACION) {
                        const badgeNotificacion = document.querySelector('.badge-notificacion');
                        if (badgeNotificacion) {
                            badgeNotificacion.style.display = 'inline-block';
                            badgeNotificacion.classList.add('pulso-notificacion');
                        }
                        return; // No consultar el endpoint si ya hay notificación activa
                    } else {
                        // Limpiar si ya pasó el tiempo
                        localStorage.removeItem('carrito_expirado');
                    }
                }
                
                // Luego verificar si hay productos próximos a expirar
                const response = await fetch('@Url.Action("CheckExpiracion", "Carrito")');
                if (!response.ok) return;
                
                const result = await response.json();
                
                const badgeNotificacion = document.querySelector('.badge-notificacion');
                if (badgeNotificacion) {
                    if (result.tieneAlerta) {
                        badgeNotificacion.style.display = 'inline-block';
                        badgeNotificacion.classList.add('pulso-notificacion');
                    } else {
                        badgeNotificacion.style.display = 'none';
                        badgeNotificacion.classList.remove('pulso-notificacion');
                    }
                }
            } catch (error) {
                console.error('Error verificando expiración del carrito:', error);
            }
        }

        // Función global para actualizar contador (usada desde otras páginas)
        function actualizarContadorCarrito(totalItems) {
            const contador = document.querySelector('.contador-carrito');
            if (contador) {
                contador.textContent = totalItems;
            }
            // También verificar la expiración al actualizar el carrito
            verificarExpiracionCarrito();
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>