@model DePan.Models.Carrito

@{
    ViewData["Title"] = "Mi Carrito";
    
    // Calcular tiempo de expiración más próximo si hay productos en el carrito
    TimeSpan tiempoExpiracion = TimeSpan.FromMinutes(2); // 2 minutos para testing
    var lineaMasAntigua = Model.LineaCarritos.OrderBy(l => l.FechaReserva).FirstOrDefault();
    TimeSpan tiempoTranscurrido = lineaMasAntigua != null ? DateTime.Now - lineaMasAntigua.FechaReserva : TimeSpan.Zero;
    TimeSpan tiempoRestante = tiempoExpiracion - tiempoTranscurrido;
    int segundosRestantes = (int)tiempoRestante.TotalSeconds;
    bool mostrarAdvertencia = segundosRestantes <= 60 && segundosRestantes > 0; // Advertencia cuando quede 60 segundos o menos
    bool carritoExpirado = segundosRestantes <= 0;
}

<div class="container">
    <h1 class="mb-4">Mi Carrito de Compras</h1>

    @* Notificación de expiración persistente (controlada por JavaScript) *@
    <div id="notificacion-expirado" class="alert alert-danger alert-dismissible fade show" role="alert" style="display: none;">
        <i class="fas fa-exclamation-triangle"></i>
        <strong>¡Tu carrito ha expirado!</strong> Los productos han sido devueltos al stock automáticamente después de 2 minutos sin confirmar.
        <button type="button" class="btn-close" onclick="cerrarNotificacionExpiracion()"></button>
    </div>

    @if (Model.LineaCarritos.Any() && !carritoExpirado)
    {
        @* Advertencia de expiración *@
        if (mostrarAdvertencia)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="fas fa-clock"></i>
                <strong>¡Atención!</strong> Tu carrito expirará en <strong><span id="tiempo-restante">@segundosRestantes</span> segundos</strong>. 
                Completa tu pedido pronto para no perder la reserva.
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Productos en el carrito</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var linea in Model.LineaCarritos)
                        {
                            <div class="row align-items-center mb-3 pb-3 border-bottom" data-linea-id="@linea.IdLineaCarrito" data-precio-unitario="@linea.PrecioUnitario">
                                <div class="col-md-2">
                                    <img src="@(linea.IdProductoNavigation.ImagenUrl ?? "/images/placeholder.jpg")" 
                                         class="img-fluid rounded" 
                                         alt="@linea.IdProductoNavigation.Nombre"
                                         style="max-height: 80px;">
                                </div>
                                <div class="col-md-4">
                                    <h6 class="mb-1">@linea.IdProductoNavigation.Nombre</h6>
                                    <p class="text-muted small mb-0">@linea.IdProductoNavigation.IdCategoriaNavigation?.Nombre</p>
                                </div>
                                <div class="col-md-2">
                                    <p class="mb-0">@linea.PrecioUnitario.ToString("C")</p>
                                </div>
                                <div class="col-md-2">
                                    <div class="input-group input-group-sm">
                                        <button class="btn btn-outline-secondary btn-menos" 
                                                onclick="manejarCambiarCantidad(@linea.IdLineaCarrito, -1)">-</button>
                                        <input type="number" class="form-control text-center" 
                                               value="@linea.Cantidad" 
                                               id="cantidad-@linea.IdLineaCarrito" 
                                               data-cantidad-original="@linea.Cantidad"
                                               min="1"
                                               max="@linea.Cantidad"
                                               onchange="manejarCambiarCantidad(@linea.IdLineaCarrito, this.value)">
                                        <button class="btn btn-outline-secondary btn-mas" 
                                                onclick="manejarCambiarCantidad(@linea.IdLineaCarrito, 1)">+</button>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <p class="mb-0 fw-bold" id="subtotal-@linea.IdLineaCarrito">@linea.Subtotal.ToString("C")</p>
                                    <button class="btn btn-danger btn-sm mt-1" 
                                            onclick="eliminarProducto(@linea.IdLineaCarrito); return false;">
                                        <i class="fas fa-trash"></i> Eliminar
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Resumen del Pedido</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>@Model.Total.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Envío:</span>
                            <span>2,50 €</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong>@((Model.Total + 2.50m).ToString("C"))</strong>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Checkout", "Pedidos")" class="btn btn-success btn-lg">
                                Proceder al Pago
                            </a>
                            <button class="btn btn-outline-danger" onclick="vaciarCarrito()">
                                Vaciar Carrito
                            </button>
                            <a href="@Url.Action("Index", "Productos")" class="btn btn-outline-primary">
                                Seguir Comprando
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        @* Mostrar mensaje de carrito vacío (sin mostrar la alerta de expiración aquí, se maneja con JavaScript) *@
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
            <h3>Tu carrito está vacío</h3>
            <p class="text-muted">Agrega algunos productos para continuar</p>
            <a href="@Url.Action("Index", "Productos")" class="btn btn-primary btn-lg">
                Ir a Productos
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Verificar y mostrar notificación de expiración al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            verificarNotificacionExpiracion();
        });

        function verificarNotificacionExpiracion() {
            var notificacionData = localStorage.getItem('carrito_expirado');
            if (notificacionData) {
                var data = JSON.parse(notificacionData);
                var ahora = new Date().getTime();
                var tiempoTranscurrido = ahora - data.timestamp;
                var DURACION_NOTIFICACION = 3 * 60 * 1000; // 3 minutos
                
                // Mostrar notificación si han pasado menos de 3 minutos
                if (tiempoTranscurrido < DURACION_NOTIFICACION) {
                    var notificacion = document.getElementById('notificacion-expirado');
                    if (notificacion) {
                        notificacion.style.display = 'block';
                    }
                    
                    // Auto-ocultar después del tiempo restante
                    setTimeout(function() {
                        cerrarNotificacionExpiracion();
                    }, DURACION_NOTIFICACION - tiempoTranscurrido);
                } else {
                    // Limpiar si ya pasaron los 3 minutos
                    localStorage.removeItem('carrito_expirado');
                }
            }
        }

        function cerrarNotificacionExpiracion() {
            var notificacion = document.getElementById('notificacion-expirado');
            if (notificacion) {
                notificacion.style.display = 'none';
            }
            localStorage.removeItem('carrito_expirado');
        }

        function marcarCarritoComoExpirado() {
            localStorage.setItem('carrito_expirado', JSON.stringify({
                timestamp: new Date().getTime()
            }));
        }

        // Actualizar contador de tiempo restante cada segundo
        @if (Model.LineaCarritos.Any() && mostrarAdvertencia)
        {
            @:var segundosRestantes = @segundosRestantes;
            @:
            @:var intervalo = setInterval(function() {
            @:    segundosRestantes--;
            @:    var elemento = document.getElementById('tiempo-restante');
            @:    if (elemento) {
            @:        elemento.textContent = segundosRestantes;
            @:        
            @:        if (segundosRestantes <= 0) {
            @:            clearInterval(intervalo);
            @:            marcarCarritoComoExpirado();
            @:            location.reload();
            @:        }
            @:    }
            @:}, 1000);
        }

        // Si el carrito ya expiró, marcar y recargar
        @if (carritoExpirado)
        {
            @:marcarCarritoComoExpirado();
            @:setTimeout(function() {
            @:    location.reload();
            @:}, 3000);
        }

        // Wrapper sincrónico para los botones +/-
        function manejarCambiarCantidad(lineaCarritoId, cambio) {
            cambiarCantidad(lineaCarritoId, cambio);
            return false;
        }

        async function cambiarCantidad(lineaCarritoId, cambio) {
            const inputElement = document.getElementById(`cantidad-${lineaCarritoId}`);
            const cantidadOriginal = parseInt(inputElement.getAttribute('data-cantidad-original'));
            const cantidadActual = parseInt(inputElement.value);
            let nuevaCantidad;

            console.log('cambio:', cambio, 'tipo:', typeof cambio, 'cantidadActual:', cantidadActual);

            if (typeof cambio === 'string' && cambio.match(/^\d+$/)) {
                // Si es un valor directo del onchange (string numérico)
                nuevaCantidad = parseInt(cambio);
            } else if (typeof cambio === 'number') {
                // Si es un incremento/decremento (+1 o -1)
                nuevaCantidad = cantidadActual + cambio;
            } else {
                return;
            }

            console.log('nuevaCantidad calculada:', nuevaCantidad, 'cantidadOriginal:', cantidadOriginal);

            // Validar los límites
            if (nuevaCantidad < 1) {
                nuevaCantidad = 1;
                inputElement.value = 1;
                return;
            }

            if (nuevaCantidad > cantidadOriginal) {
                nuevaCantidad = cantidadOriginal;
                inputElement.value = cantidadOriginal;
                return;
            }

            // Actualizar el DOM sin recargar
            inputElement.value = nuevaCantidad;
            await actualizarCantidadProducto(lineaCarritoId, nuevaCantidad);
        }

        async function actualizarCantidadProducto(lineaCarritoId, nuevaCantidad) {
            const cantidadFinal = parseInt(nuevaCantidad);
            console.log('Enviando:', { lineaCarritoId, cantidad: cantidadFinal });
            
            try {
                const payload = JSON.stringify({ 
                    lineaCarritoId: parseInt(lineaCarritoId), 
                    cantidad: cantidadFinal 
                });
                console.log('Payload JSON:', payload);
                
                const response = await fetch('@Url.Action("ActualizarCantidad", "Carrito")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: payload
                });

                const result = await response.json();
                console.log('Respuesta completa:', result);
                
                if (result.success) {
                    // Actualizar el subtotal en el DOM sin recargar
                    const filaDiv = document.querySelector(`[data-linea-id="${lineaCarritoId}"]`);
                    if (filaDiv) {
                        const precioUnitario = parseFloat(filaDiv.getAttribute('data-precio-unitario')) || 0;
                        const nuevoSubtotal = (cantidadFinal * precioUnitario).toFixed(2);
                        const subtotalElement = document.getElementById(`subtotal-${lineaCarritoId}`);
                        if (subtotalElement) {
                            subtotalElement.textContent = `${nuevoSubtotal}€`;
                        }
                    }
                } else {
                    alert('Error: ' + result.message);
                    // Revertir el valor en el input
                    location.reload();
                }
            } catch (error) {
                console.error('Error en fetch:', error);
                alert('Error al actualizar la cantidad');
                location.reload();
            }
        }

        async function eliminarProducto(lineaCarritoId) {
            if (!confirm('¿Estás seguro de que quieres eliminar este producto del carrito?')) {
                return false;
            }

            try {
                const payload = JSON.stringify({ 
                    lineaCarritoId: parseInt(lineaCarritoId)
                });
                
                const response = await fetch('@Url.Action("Eliminar", "Carrito")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: payload
                });

                const result = await response.json();
                console.log('Resultado eliminación:', result);
                
                if (result.success) {
                    // Eliminar la fila del DOM sin recargar
                    const filaDiv = document.querySelector(`[data-linea-id="${lineaCarritoId}"]`);
                    if (filaDiv) {
                        filaDiv.remove();
                    }
                    // Recargar después de 500ms para actualizar totales
                    setTimeout(() => {
                        location.reload();
                    }, 500);
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al eliminar el producto');
            }
            return false;
        }

        async function vaciarCarrito() {
            if (!confirm('¿Estás seguro de que quieres vaciar todo el carrito?')) {
                return;
            }

            try {
                const response = await fetch('@Url.Action("Vaciar", "Carrito")', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    }
                });

                const result = await response.json();
                
                if (result.success) {
                    location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al vaciar el carrito');
            }
        }
    </script>
}