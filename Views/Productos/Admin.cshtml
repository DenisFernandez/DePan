@model List<DePan.Models.Producto>

@{
    ViewData["Title"] = "Administración de Productos";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Administración de Productos</h1>
        <a href="@Url.Action("Create")" class="btn btn-success">Nuevo Producto</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Categoría</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Disponible</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model)
                {
                    <tr>
                        <td>@producto.IdProducto</td>
                        <td>@producto.Nombre</td>
                        <td>@producto.IdCategoriaNavigation?.Nombre</td>
                        <td>@producto.Precio.ToString("C")</td>
                        <td>@producto.Stock</td>
                        <td>
                            @if (producto.Disponible == true)
                            {
                                <span class="badge bg-success">Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("Edit", new { id = producto.IdProducto })" class="btn btn-warning btn-sm">Editar</a>
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@producto.IdProducto" />
                                    <button type="submit" class="btn btn-danger btn-sm" 
                                            onclick="return confirm('¿Estás seguro de que quieres eliminar este producto?')">
                                        Eliminar
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center">
            <h3>No hay productos registrados</h3>
            <p>Comienza agregando tu primer producto.</p>
            <a href="@Url.Action("Create")" class="btn btn-primary">Crear Primer Producto</a>
        </div>
    }
</div>