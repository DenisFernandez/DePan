@model DePan.Models.ProductoViewModel

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container">
    <h1>Editar Producto</h1>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="IdProducto" />
                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre del Producto</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Precio" class="form-label">Precio</label>
                            <input asp-for="Precio" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Stock" class="form-label">Stock</label>
                            <input asp-for="Stock" type="number" class="form-control" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IdCategoria" class="form-label">Categoría</label>
                    <select asp-for="IdCategoria" class="form-control" asp-items="@(new SelectList(Model.Categorias, "IdCategoria", "Nombre"))">
                        <option value="">Seleccione una categoría</option>
                    </select>
                    <span asp-validation-for="IdCategoria" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImagenUrl" class="form-label">URL de la Imagen</label>
                    <input asp-for="ImagenUrl" class="form-control" placeholder="https://ejemplo.com/imagen.jpg" />
                    <span asp-validation-for="ImagenUrl" class="text-danger"></span>
                </div>

                <div class="form-group form-check mb-3">
                    <input asp-for="Disponible" class="form-check-input" />
                    <label asp-for="Disponible" class="form-check-label">Producto disponible</label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-warning">Actualizar Producto</button>
                    <a href="@Url.Action("Admin")" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}