@{
    ViewData["Title"] = "Test de Base de Datos";
}

<h1>Test de Conexión a Base de Datos</h1>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        <h4>Error:</h4>
        <p>@ViewBag.Error</p>
    </div>
}
else if (ViewBag.CanConnect)
{
    <div class="alert alert-success">
        <h4>✅ Conexión exitosa</h4>
        <p>La aplicación se conectó correctamente a la base de datos.</p>
        @if (ViewBag.UserCount != null)
        {
            <p>Usuarios en la base de datos: @ViewBag.UserCount</p>
        }
    </div>
}
else
{
    <div class="alert alert-warning">
        <h4>⚠️ Conexión no disponible</h4>
        <p>No se pudo conectar a la base de datos.</p>
    </div>
}

<a href="/" class="btn btn-primary">Volver al Inicio</a>