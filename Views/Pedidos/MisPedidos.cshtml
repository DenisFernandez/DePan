@model List<DePan.Models.Pedido>

@{
    ViewData["Title"] = "Mis Pedidos";
}

<div class="container">
    <h1 class="mb-4">Mis Pedidos</h1>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-12">
                @foreach (var pedido in Model)
                {
                    <div class="card mb-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title mb-0">Pedido #@pedido.NumeroPedido</h5>
                                <small class="text-muted">Realizado el @pedido.FechaPedido.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                            <div>
                                <span class="badge @GetEstadoBadgeClass(pedido.Estado)">@pedido.Estado</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6>Productos:</h6>
                                    @foreach (var linea in pedido.LineaPedidos)
                                    {
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <div>
                                                <span>@linea.IdProductoNavigation.Nombre</span>
                                                <small class="text-muted">(x@linea.Cantidad)</small>
                                            </div>
                                            <span>@linea.Subtotal.ToString("C")</span>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-12 mb-2">
                                            <strong>Dirección de entrega:</strong>
                                            <p class="mb-0">@pedido.DireccionEntrega</p>
                                            <p class="mb-0">@pedido.CiudadEntrega, @pedido.CodigoPostalEntrega</p>
                                        </div>
                                        <div class="col-12">
                                            <div class="d-flex justify-content-between">
                                                <strong>Total:</strong>
                                                <strong class="text-success">@pedido.Total.ToString("C")</strong>
                                            </div>
                                            @if (pedido.FechaEntregaEstimada.HasValue)
                                            {
                                                <small class="text-muted">
                                                    Entrega estimada: @pedido.FechaEntregaEstimada.Value.ToString("dd/MM/yyyy")
                                                </small>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-3">
                                <a href="@Url.Action("Detalles", new { id = pedido.IdPedido })" class="btn btn-outline-primary btn-sm">
                                    Ver Detalles
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
            <h3>No tienes pedidos realizados</h3>
            <p class="text-muted">Realiza tu primer pedido para verlo aquí</p>
            <a href="@Url.Action("Index", "Productos")" class="btn btn-primary btn-lg">
                Ir a Productos
            </a>
        </div>
    }
</div>

@functions {
    public string GetEstadoBadgeClass(string estado)
    {
        return estado.ToLower() switch
        {
            "pendiente" => "bg-warning",
            "confirmado" => "bg-info",
            "preparando" => "bg-primary",
            "en camino" => "bg-secondary",
            "entregado" => "bg-success",
            "cancelado" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}