@model List<DePan.Models.Pedido>

@{
    ViewData["Title"] = "Mis Pedidos";
}

<div class="container">
    <h1 class="mb-4">Mis Pedidos</h1>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-12">
                @foreach (var pedido in Model)
                {
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header bg-light">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title mb-1">
                                        <i class="fas fa-receipt"></i> Pedido #@pedido.NumeroPedido
                                    </h5>
                                    <small class="text-muted">
                                        <i class="far fa-calendar"></i> @pedido.FechaPedido.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </div>
                                <div>
                                    <h4 class="mb-0">
                                        <span class="badge @GetEstadoBadgeClass(pedido.Estado)">
                                            <i class="@GetEstadoIcon(pedido.Estado)"></i> 
                                            @GetEstadoTexto(pedido.Estado)
                                        </span>
                                    </h4>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Seguimiento del pedido -->
                            <div class="mb-4">
                                <h6 class="mb-3"><i class="fas fa-shipping-fast"></i> Estado del Pedido</h6>
                                <div class="progress-tracker">
                                    <div class="progress-step @(GetEstadoPosicion(pedido.Estado) >= 1 ? "completed" : "")">
                                        <div class="step-icon">
                                            <i class="fas fa-clock"></i>
                                        </div>
                                        <div class="step-text">Pendiente</div>
                                    </div>
                                    <div class="progress-step @(GetEstadoPosicion(pedido.Estado) >= 2 ? "completed" : "")">
                                        <div class="step-icon">
                                            <i class="fas fa-utensils"></i>
                                        </div>
                                        <div class="step-text">Preparando</div>
                                    </div>
                                    <div class="progress-step @(GetEstadoPosicion(pedido.Estado) >= 3 ? "completed" : "")">
                                        <div class="step-icon">
                                            <i class="fas fa-truck"></i>
                                        </div>
                                        <div class="step-text">Enviado</div>
                                    </div>
                                    <div class="progress-step @(GetEstadoPosicion(pedido.Estado) >= 4 ? "completed" : "")">
                                        <div class="step-icon">
                                            <i class="fas fa-check-circle"></i>
                                        </div>
                                        <div class="step-text">Entregado</div>
                                    </div>
                                </div>
                                @if (pedido.Estado == "cancelado")
                                {
                                    <div class="alert alert-danger mt-3">
                                        <i class="fas fa-times-circle"></i> Este pedido ha sido cancelado
                                    </div>
                                }
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <h6><i class="fas fa-box"></i> Productos:</h6>
                                    <div class="list-group list-group-flush">
                                        @foreach (var linea in pedido.LineaPedidos)
                                        {
                                            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                                <div>
                                                    <strong>@linea.IdProductoNavigation.Nombre</strong>
                                                    <small class="text-muted d-block">Cantidad: @linea.Cantidad</small>
                                                </div>
                                                <span class="badge bg-primary rounded-pill">@linea.Subtotal.ToString("C")</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h6><i class="fas fa-map-marker-alt"></i> Dirección de Entrega:</h6>
                                    <div class="alert alert-light">
                                        <p class="mb-1"><strong>@pedido.DireccionEntrega</strong></p>
                                        <p class="mb-1">@pedido.CiudadEntrega, @pedido.CodigoPostalEntrega</p>
                                        <p class="mb-0"><i class="fas fa-phone"></i> @pedido.TelefonoContacto</p>
                                    </div>

                                    <div class="card bg-light border-0 mt-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between mb-2">
                                                <span>Subtotal:</span>
                                                <span>@pedido.Subtotal.ToString("C")</span>
                                            </div>
                                            <div class="d-flex justify-content-between mb-2">
                                                <span>Gastos de envío:</span>
                                                <span>@pedido.GastosEnvio.ToString("C")</span>
                                            </div>
                                            <hr>
                                            <div class="d-flex justify-content-between">
                                                <strong>Total:</strong>
                                                <strong class="text-success fs-5">@pedido.Total.ToString("C")</strong>
                                            </div>
                                        </div>
                                    </div>

                                    @if (pedido.FechaEntregaEstimada.HasValue && pedido.Estado != "entregado" && pedido.Estado != "cancelado")
                                    {
                                        <div class="alert alert-info mt-3">
                                            <i class="far fa-clock"></i> 
                                            <strong>Entrega estimada:</strong> @pedido.FechaEntregaEstimada.Value.ToString("dd/MM/yyyy")
                                        </div>
                                    }
                                    @if (pedido.FechaEntregaReal.HasValue)
                                    {
                                        <div class="alert alert-success mt-3">
                                            <i class="fas fa-check"></i> 
                                            <strong>Entregado el:</strong> @pedido.FechaEntregaReal.Value.ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="mt-3 text-end">
                                <a href="@Url.Action("Detalles", new { id = pedido.IdPedido })" class="btn btn-outline-primary">
                                    <i class="fas fa-info-circle"></i> Ver Detalles Completos
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
            <h3>No tienes pedidos realizados</h3>
            <p class="text-muted">Realiza tu primer pedido para verlo aquí</p>
            <a href="@Url.Action("Index", "Productos")" class="btn btn-primary btn-lg">
                <i class="fas fa-shopping-bag"></i> Ir a Productos
            </a>
        </div>
    }
</div>

<style>
    .progress-tracker {
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
        padding: 20px 0;
    }

    .progress-tracker::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 3px;
        background: #e9ecef;
        z-index: 0;
        transform: translateY(-50%);
    }

    .progress-step {
        position: relative;
        text-align: center;
        flex: 1;
        z-index: 1;
    }

    .progress-step .step-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: #e9ecef;
        color: #6c757d;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 10px;
        font-size: 20px;
        border: 3px solid #fff;
        transition: all 0.3s;
    }

    .progress-step.completed .step-icon {
        background: #8b5e3c;
        color: white;
    }

    .progress-step .step-text {
        font-size: 12px;
        font-weight: 500;
        color: #6c757d;
    }

    .progress-step.completed .step-text {
        color: #8b5e3c;
        font-weight: 600;
    }
</style>

@functions {
    public string GetEstadoBadgeClass(string estado)
    {
        return estado.ToLower() switch
        {
            "pendiente" => "bg-warning text-dark",
            "preparando" => "bg-primary",
            "enviado" => "bg-info",
            "entregado" => "bg-success",
            "cancelado" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    public string GetEstadoIcon(string estado)
    {
        return estado.ToLower() switch
        {
            "pendiente" => "fas fa-clock",
            "preparando" => "fas fa-utensils",
            "enviado" => "fas fa-truck",
            "entregado" => "fas fa-check-circle",
            "cancelado" => "fas fa-times-circle",
            _ => "fas fa-question-circle"
        };
    }

    public string GetEstadoTexto(string estado)
    {
        return estado.ToLower() switch
        {
            "pendiente" => "Pendiente",
            "preparando" => "Preparando",
            "enviado" => "En Camino",
            "entregado" => "Entregado",
            "cancelado" => "Cancelado",
            _ => estado
        };
    }

    public int GetEstadoPosicion(string estado)
    {
        return estado.ToLower() switch
        {
            "pendiente" => 1,
            "preparando" => 2,
            "enviado" => 3,
            "entregado" => 4,
            "cancelado" => 0,
            _ => 0
        };
    }
}