@model DePan.Models.Pedido

@{
    ViewData["Title"] = "Detalles del Pedido";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Pedido #@Model.NumeroPedido</h4>
                    <span class="badge @GetEstadoBadgeClass(Model.Estado) fs-6">@Model.Estado</span>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Productos del Pedido</h5>
                    
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Cantidad</th>
                                    <th>Precio Unitario</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var linea in Model.LineaPedidos)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@(linea.IdProductoNavigation.ImagenUrl ?? "/images/placeholder.jpg")" 
                                                     class="img-thumbnail me-2" 
                                                     style="width: 50px; height: 50px; object-fit: cover;" 
                                                     alt="@linea.IdProductoNavigation.Nombre">
                                                <div>
                                                    <strong>@linea.IdProductoNavigation.Nombre</strong>
                                                    <br>
                                                   <small class="text-muted">@linea.IdProductoNavigation.IdCategoriaNavigation?.Nombre</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@linea.Cantidad</td>
                                        <td>@linea.PrecioUnitario.ToString("C")</td>
                                        <td>@linea.Subtotal.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Información del Pedido</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Fecha del Pedido:</strong>
                        <p class="mb-0">@Model.FechaPedido.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>

                    <div class="mb-3">
                        <strong>Estado Actual:</strong>
                        <p class="mb-0">
                            <span class="badge @GetEstadoBadgeClass(Model.Estado)">@Model.Estado</span>
                        </p>
                    </div>

                    @if (Model.FechaEntregaEstimada.HasValue)
                    {
                        <div class="mb-3">
                            <strong>Entrega Estimada:</strong>
                            <p class="mb-0">@Model.FechaEntregaEstimada.Value.ToString("dd/MM/yyyy")</p>
                        </div>
                    }

                    @if (Model.FechaEntregaReal.HasValue)
                    {
                        <div class="mb-3">
                            <strong>Entregado el:</strong>
                            <p class="mb-0">@Model.FechaEntregaReal.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    }

                    @if (Model.IdRepartidorNavigation != null)
                    {
                        <div class="mb-3">
                            <strong>Repartidor:</strong>
                            <p class="mb-0">@Model.IdRepartidorNavigation.Nombre @Model.IdRepartidorNavigation.Apellidos</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">Dirección de Entrega</h5>
                </div>
                <div class="card-body">
                    <p class="mb-1">@Model.DireccionEntrega</p>
                    <p class="mb-1">@Model.CiudadEntrega, @Model.CodigoPostalEntrega</p>
                    <p class="mb-0">
                        <strong>Teléfono:</strong> @Model.TelefonoContacto
                    </p>
                    
                    @if (!string.IsNullOrEmpty(Model.Notas))
                    {
                        <div class="mt-2">
                            <strong>Notas:</strong>
                            <p class="mb-0">@Model.Notas</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">Resumen de Pago</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <span>@Model.Subtotal.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Gastos de Envío:</span>
                        <span>@Model.GastosEnvio.ToString("C")</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between fw-bold fs-5">
                        <span>Total:</span>
                        <span class="text-success">@Model.Total.ToString("C")</span>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <a href="@Url.Action("MisPedidos")" class="btn btn-outline-secondary w-100">
                    Volver a Mis Pedidos
                </a>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetEstadoBadgeClass(string estado)
    {
        return estado.ToLower() switch
        {
            "pendiente" => "bg-warning",
            "confirmado" => "bg-info",
            "preparando" => "bg-primary",
            "en camino" => "bg-secondary",
            "entregado" => "bg-success",
            "cancelado" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}